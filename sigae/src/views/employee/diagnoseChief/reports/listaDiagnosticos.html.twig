<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="AIO taller mecanico en montevideo, Estacionamiento 24 horas y mas">
    <meta name="keywords" content="Taller mecanico, taller mecanico montevideo, taller mecanico cerca de mi, estacionamiento 24 horas, venta de neumaticos">
    <meta name="author" content="All In One">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All In One - SIGAE</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('ico/logo-positivo.ico') }}">
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        @font-face {
            font-family: 'Teachers';
            src: url("{{ asset('font/Teachers-VariableFont_wght.ttf') }}");
            font-weight: normal;
            font-style: normal;
        }
    
        body, input, select, button, option {
            font-family: 'Teachers', sans-serif;
        }

        .btn{
            background-color: #dc2626;
            text: white;
        }

        .btn:hover{
            background-color: #b91c1c;
            text: white;
        }
    </style>
</head>

{% include 'partials/headerJefeDiagnostico.html.twig' %}
{% if response.errors is defined and response.errors is not empty %}
	<div id="error-container" style="background-color: #ffcec6;" class="text-gray-950 text-center p-4 rounded-md mb-4">
		<ul id="error-list">
			{% for error in response.errors %}
				<li>{{ error }}</li>
			{% endfor %}
		</ul>
	</div>
{% endif %}
<div class="container mx-auto px-4 py-8">
<h2 class="text-2xl font-bold text-neutral-900 mb-8">Historial de Diagnósticos</h2>
    {% for diagnostico in diagnosticos %}
        <div class="mb-6 bg-white rounded-lg shadow-md p-6">
            <form>
                {# Fila superior con ID, select y botón #}
                <div class="flex items-center space-x-4 mb-4">
                    {# ID del diagnostico #}
                    <div class="flex-none">
                        <span class="text-gray-700 font-medium"><strong>ID:</strong> {{ diagnostico.id }}</span>
                        <p class="text-gray-700 font-medium"><strong>Matrícula:</strong> {{ diagnostico.matricula }}</p>
                        <p class="text-gray-700 font-medium"><strong>Comienzo:</strong> {{ diagnostico.fecha_inicio }}</p>
                        <p class="text-gray-700 font-medium"><strong>Final:</strong> {{ diagnostico.fecha_final }}</p>
                        <p class="text-gray-700 font-medium"><strong>Estado:</strong> {{ diagnostico.estado }}</p>
                        <p class="text-gray-700 font-medium"><strong>Tipo:</strong> {{ diagnostico.tipo }}</p>
                    </div>
                </div>
                
                {# Campo de diagnóstico #}
                <div>
                    <textarea name="diagnostico" 
                             rows="6" 
                             class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" readonly>{{ diagnostico.diagnostico }}</textarea>
                </div>
            </form>
        </div>
    {% endfor %}
</div>

    {% include 'partials/footer.html.twig' %}

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const archivoTraduccionHeader = "{{ asset('translate/header.json') }}";
            // const archivoTraduccionHome = "{{ asset('translate/.json') }}";
            inicializarTraduccion(archivoTraduccionHeader, archivoTraduccionHome, 'es');
        });
    </script>
</body>