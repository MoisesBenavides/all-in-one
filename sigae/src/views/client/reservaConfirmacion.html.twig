<body>
    <h1>Confirmación de Reserva</h1>
    
    {# Generar salida de datos de reserva #}
    <p>Email: {{sessionData.email}}</p>
    <p>ID de usuario: {{sessionData.id}}</p>
    <p>Nombre: {{sessionData.nombre}}</p>
    <p>Apellido: {{sessionData.apellido}}</p>
    <p>Servicio: {{sessionData.servicio}}</p>

   
    {% if (sessionData.telefono) %}
        <p>Teléfono: {{sessionData.telefono}}</p>;
    {% endif %}

    {% if sessionData.reserva %}
        <h2>Detalles de la Reserva</h2>
        <p>ID del servicio: {{ sessionData.reserva.id }}</p>
        <p>Matricula: {{ sessionData.reserva.matricula }}</p>
        <p>Precio: {{ sessionData.reserva.precio }}</p>
        <p>Fecha de inicio: {{ sessionData.reserva.fecha_inicio }}</p>
        <p>Fecha de finalización: {{ sessionData.reserva.fecha_final }}</p>
        <p>Estado: {{ sessionData.reserva.estado }}</p>

        {% if sessionData.servicio == 'parking' %}
            <h3>Detalles Adicionales para Parking</h3>
            <p>Largo plazo: {{ sessionData.reserva.largo_plazo }}</p>
            <p>Tipo de plaza: {{ sessionData.reserva.tipo_plaza }}</p>
            <a href="{{ path('aioParking') }}" class="button">Volver a AIO Parking</a>
        {% elseif sessionData.servicio == 'taller' %}
            <h3>Detalles Adicionales para Taller</h3>
            <p>Tipo: {{ sessionData.reserva.tipo }}</p>
            <p>Descripción: {{ sessionData.reserva.descripcion }}</p>
            <p>Tiempo estimado: {{ sessionData.reserva.tiempo_estimado }} minutos</p>
            <a href="{{ path('services') }}" class="button">Volver a Servicios</a>
        {% endif %}
    {% else %}
        <p>No hay detalles de reserva disponibles.</p>
    {% endif %}
    
</body>

</html>