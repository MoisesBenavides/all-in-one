<header class="w-screen">
    <div class="container mx-auto px-4 py-4">
        <div class="relative flex flex-col md:flex-row justify-between items-center">
            <!-- Hamburguesa (visible solo en móviles) -->
            <div class="absolute top-2 left-4 md:hidden">
                <button id="hamburger" class="text-black focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
            </div>

            <!-- Logo -->
            <a href="{{ path('home') }}">
                <div class="w-40 h-auto mb-4 md:mb-0 mx-auto md:mx-0">
                    <img class="w-full h-auto" src="{{ asset('img/AIO Positivo.png') }}" alt="AIO Logo" />
                </div>
            </a>

            <!-- Navegación -->
            <nav class="hidden md:flex flex-wrap justify-center md:justify-end space-x-2 md:space-x-4">
                <a href="{{ path('services') }}" traducir="services" class="text-black text-xs sm:text-sm md:text-lg lg:text-xl font-bold">Servicios</a>
                <a href="{{ path('aioParking') }}" traducir="aioParking" class="text-black text-xs sm:text-sm md:text-lg lg:text-xl font-bold">AIO Parking</a>
                <a href="{{ path('products') }}" traducir="products" class="text-black text-xs sm:text-sm md:text-lg lg:text-xl font-bold">Repuestos y accesorios</a>
                <a href="{{ path('faq') }}" traducir="faq" class="text-black text-xs sm:text-sm md:text-lg lg:text-xl font-bold">FAQ</a>
            </nav>

        <div class="absolute top-2 right-4 md:static flex items-center space-x-6"> 
    <!-- Selector de idioma con contenedor relativo -->
            <div class="inline-block">
                <div class="relative inline-flex items-center">
                    <button id="languageToggle" class="w-8 h-8 rounded-full hover:scale-110 transition-transform duration-300 focus:outline-none">
                        <img src="{{ asset('img/world.png') }}" alt="Language" class="w-full h-full object-cover">
                    </button>
                    
                    <!-- Menú desplegable de idiomas -->
                    <div id="languageMenu" class="hidden absolute -right-[calc(100%+130px)] top-0 bg-white rounded-lg shadow-lg transform scale-95 transition-all duration-200 ease-in-out">
                        <div class="flex items-center space-x-2 p-2">
                            <button data-idioma="es" class="hover:bg-gray-100 transition-colors duration-200 rounded p-1">
                                <img src="{{ asset('img/es.png') }}" alt="Español" class="w-8 h-5 object-cover">
                            </button>
                            <button data-idioma="it" class="hover:bg-gray-100 transition-colors duration-200 rounded p-1">
                                <img src="{{ asset('img/it.png') }}" alt="Italiano" class="w-8 h-5 object-cover">
                            </button>
                            <button data-idioma="en" class="hover:bg-gray-100 transition-colors duration-200 rounded p-1">
                                <img src="{{ asset('img/en.png') }}" alt="English" class="w-8 h-5 object-cover">
                            </button>
                        </div>
                    </div>
                </div>
            </div>

    <!-- User icon -->
    <a href="{{ path('myAccount') }}" class="hover:scale-110 transition-transform duration-300">
        <img class="w-10 h-10" src="{{ asset('img/user.png') }}" alt="User">
    </a>
</div>

        <!-- Menú hamburguesa móvil -->
        <nav id="mobileMenu" class="hidden md:hidden mt-4 space-y-2">
            <a href="{{ path('services') }}" traducir="services" class="block text-black text-sm font-bold">Servicios</a>
            <a href="{{ path('aioParking') }}" traducir="aioParking" class="block text-black text-sm font-bold">AIO Parking</a>
            <a href="{{ path('products') }}" traducir="products" class="block text-black text-sm font-bold">Repuestos y accesorios</a>
            <a href="{{ path('faq') }}" traducir="faq" class="block text-black text-sm font-bold">FAQ</a>
        </nav>
    </div>

    <script src="{{ asset('js/traduccion.js') }}"></script>
    <script>
        // Lógica del menú hamburguesa
        const hamburger = document.getElementById('hamburger');
        const mobileMenu = document.getElementById('mobileMenu');

        hamburger.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Lógica del selector de idioma
        const languageToggle = document.getElementById('languageToggle');
        const languageMenu = document.getElementById('languageMenu');

        languageToggle.addEventListener('click', () => {
            languageMenu.classList.toggle('hidden');
            // Añadir animación de escala
            if (!languageMenu.classList.contains('hidden')) {
                languageMenu.classList.add('scale-100');
                languageMenu.classList.remove('scale-95');
            } else {
                languageMenu.classList.add('scale-95');
                languageMenu.classList.remove('scale-100');
            }
        });

        // Cerrar el menú cuando se hace clic fuera
        document.addEventListener('click', (event) => {
            if (!languageToggle.contains(event.target) && !languageMenu.contains(event.target)) {
                languageMenu.classList.add('hidden');
                languageMenu.classList.add('scale-95');
                languageMenu.classList.remove('scale-100');
            }
        });

        // Lógica de traducción
        const archivoTraduccionHeader = "{{ asset('traductions/header.json') }}";

        document.addEventListener('DOMContentLoaded', () => {
            inicializarTraduccion(archivoTraduccionHeader, 'es');
        });

        languageMenu.querySelectorAll('button').forEach(button => {
            button.addEventListener('click', (e) => {
                const idioma = e.currentTarget.getAttribute('data-idioma');
                cambiarIdioma(idioma);
                languageMenu.classList.add('hidden');
            });
        });
    </script>
</header>