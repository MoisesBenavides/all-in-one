<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="AIO taller mecanico en montevideo, Estacionamiento 24 horas y mas">
    <meta name="keywords" content="Taller mecanico, taller mecanico montevideo, taller mecanico cerca de mi, estacionamiento 24 horas, venta de neumaticos">
    <meta name="author" content="All In One">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AIO - Taller, neumáticos, reservas y más</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('ico/logo-positivo.ico') }}">
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        @font-face {
            font-family: 'Teachers';
            src: url("{{ asset('font/Teachers-VariableFont_wght.ttf') }}");
            font-weight: normal;
            font-style: normal;
        }
    
        body, input, select, button, option {
            font-family: 'Teachers', sans-serif;
        }

        .btn{
            background-color: #dc2626;
            text: white;
        }

        .btn:hover{
            background-color: #b91c1c;
            text: white;
        }
    </style>
</head>

{% include 'partials/headerGerente.html.twig' %}

<body>
     <main class="min-h-screen bg-white py-8 px-4">
        <div class="max-w-7xl mx-auto grid gap-6">
            <!-- Cuadro de Error -->
            {% if response.errors is defined and response.errors is not empty %}
                <div class="w-full max-w-2xl mx-auto bg-red-100 text-gray-950 text-center p-4 rounded-lg">
                    <ul>
                        {% for error in response.errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <!-- Grid de secciones -->
            <div class="grid md:grid-cols-2 gap-6">
                <!-- Sección de Informes -->
                <section class="bg-neutral-50 p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                    <h2 class="text-2xl md:text-3xl text-neutral-900 mb-6 text-center font-bold">Informes disponibles</h2>
                    <a href="{{ path('showReports') }}" 
                       class="block w-full bg-red-600 hover:bg-red-700 text-white text-xl md:text-2xl font-bold py-4 px-6 rounded-lg text-center transition-colors duration-300">
                        Ingresar
                    </a>
                </section>

                <!-- Sección de Stock -->
                <section class="bg-neutral-50 p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                    <h2 class="text-2xl md:text-3xl text-neutral-900 mb-6 text-center font-bold">Gestión de Stock</h2>
                    <a href="{{ path('stockManagement') }}" 
                       class="block w-full bg-red-600 hover:bg-red-700 text-white text-xl md:text-2xl font-bold py-4 px-6 rounded-lg text-center transition-colors duration-300">
                        Ingresar
                    </a>
                </section>

                <!-- Sección de Inventario -->
                <section class="bg-neutral-50 p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                    <h2 class="text-2xl md:text-3xl text-neutral-900 mb-6 text-center font-bold">Inventario</h2>
                    <a href="{{ path('inventory') }}" 
                       class="block w-full bg-red-600 hover:bg-red-700 text-white text-xl md:text-2xl font-bold py-4 px-6 rounded-lg text-center transition-colors duration-300">
                        Ingresar
                    </a>
                </section>

                <!-- Sección de Funcionarios -->
                <section class="bg-neutral-50 p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                    <h2 class="text-2xl md:text-3xl text-neutral-900 mb-6 text-center font-bold">Lista de Funcionarios</h2>
                    <a href="{{ path('employeeManagement') }}" 
                       class="block w-full bg-red-600 hover:bg-red-700 text-white text-xl md:text-2xl font-bold py-4 px-6 rounded-lg text-center transition-colors duration-300">
                        Ingresar
                    </a>
                </section>
            </div>
        </div>
    </main>

    {% include 'partials/footer.html.twig' %}

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const archivoTraduccionHeader = "{{ asset('translate/header.json') }}";
            // const archivoTraduccionHome = "{{ asset('translate/.json') }}";
            inicializarTraduccion(archivoTraduccionHeader, archivoTraduccionHome, 'es');
        });
    </script>
</body>
</html>