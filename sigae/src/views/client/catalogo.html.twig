<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="AIO taller mecanico en montevideo, Estacionamiento 24 horas y mas">
    <meta name="keywords" content="Taller mecanico, taller mecanico montevideo, taller mecanico cerca de mi, estacionamiento 24 horas, venta de neumaticos">
    <meta name="author" content="All In One">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catálogo | AIO</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('ico/logo-positivo.ico') }}">
    <style>
        @font-face {
            font-family: 'Teachers';
            src: url("{{ asset('font/Teachers-VariableFont_wght.ttf') }}");
            font-weight: normal;
            font-style: normal;
        }
    
        body, input, select, button, option {
            font-family: 'Teachers', sans-serif;
        }
    </style>
</head>

<body class="bg-white">
    {% include 'partials/header.html.twig' %}

    <div class="container mx-auto px-4 py-8">
        {# Header y Búsqueda #}
        <div class="max-w-4xl mx-auto flex flex-col items-center gap-8">
            <div class="w-full bg-white border border-black rounded-md p-4">
                <h1 class="text-center text-black text-2xl md:text-3xl font-semibold">Nuestros productos</h1>
            </div>
            <div class="w-full max-w-md">
                <div class="relative">
                    <input 
                        type="text" 
                        id="buscar" 
                        placeholder="Buscar" 
                        class="w-full h-12 px-4 pr-10 rounded-md border border-black focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition-all duration-300"
                    >
                    <img 
                        id="searchIcon" 
                        class="absolute right-3 top-1/2 transform -translate-y-1/2 w-6 h-6 cursor-pointer hover:opacity-75 transition-opacity duration-300" 
                        src="{{ asset('svg/search.svg') }}" 
                        alt="Search"
                    >
                </div>
            </div>
        </div>
        
        {# Contenedor de Productos #}
        <div id="productosContainer" class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {% for producto in productos %}
                <div class="product flex flex-col items-center bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-lg {% if loop.index > 50 %}hidden{% endif %}">
                    <div class="w-full h-48 bg-gray-100">
                        <img 
                            class="w-full h-full object-contain" 
                            src="{{ asset('img/productos/' ~ producto.id ~ '.webp') }}" 
                            alt="{{ producto.nombre|default(producto.modelo|default('Producto')) }}"
                            onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\'w-full h-full flex items-center justify-center\'><span class=\'text-gray-400\'>Imagen no disponible</span></div>'"
                        />
                    </div>
                    
                    <div class="w-full p-4 flex flex-col gap-2">
                        <p class="text-lg font-semibold text-gray-800">{{ producto.marca }}</p>
                        
                        {% if producto.nombre is defined and producto.nombre %}
                            <p class="text-md text-gray-600">{{ producto.nombre }}</p>
                        {% endif %}
                        {% if producto.modelo is defined and producto.modelo %}
                            <p class="text-md text-gray-600">{{ producto.modelo }}</p>
                        {% endif %}
                        
                        <p class="mt-auto text-xl font-bold text-gray-900">${{ producto.precio }}</p>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center py-8">
                    <p class="text-gray-600">No se encontraron productos disponibles.</p>
                </div>
            {% endfor %}
        </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const inputBuscar = document.getElementById('buscar');
        const searchIcon = document.getElementById('searchIcon');
        const productosContainer = document.getElementById('productosContainer');
        const productos = document.querySelectorAll('.product');
        const verMasBtn = document.getElementById('verMas');
        const noResults = document.getElementById('noResults');
        
        let productosMostrados = 50;
        let productosVisiblesTotales = productos.length;

        function actualizarVisibilidad() {
            let productosVisibles = 0;
            const textoBusqueda = inputBuscar.value.toLowerCase();

            productos.forEach((producto, index) => {
                const textoProducto = producto.textContent.toLowerCase();
                const coincideBusqueda = textoProducto.includes(textoBusqueda);
                const dentroDelLimite = index < productosMostrados;
                
                if (coincideBusqueda && dentroDelLimite) {
                    producto.classList.remove('hidden');
                    productosVisibles++;
                } else {
                    producto.classList.add('hidden');
                }

                if (coincideBusqueda) {
                    productosVisiblesTotales++;
                }
            });

            // Mostrar/ocultar mensaje de no resultados
            noResults.classList.toggle('hidden', productosVisibles > 0);
            
            // Actualizar visibilidad del botón Ver Más
            if (verMasBtn) {
                verMasBtn.style.display = (productosVisiblesTotales > productosMostrados) ? 'block' : 'none';
            }
        }

        // Evento de búsqueda
        inputBuscar.addEventListener('input', function() {
            productosMostrados = 50; // Reset al buscar
            productosVisiblesTotales = 0;
            actualizarVisibilidad();
        });

        // Evento de búsqueda al presionar Enter
        inputBuscar.addEventListener('keyup', function(event) {
            if (event.key === 'Enter') {
                actualizarVisibilidad();
            }
        });

        // Click en icono de búsqueda
        searchIcon.addEventListener('click', function() {
            inputBuscar.focus();
            actualizarVisibilidad();
        });

        // Evento Ver Más
        if (verMasBtn) {
            verMasBtn.addEventListener('click', function() {
                productosMostrados += 50;
                actualizarVisibilidad();
            });
        }

        // Inicialización
        actualizarVisibilidad();
    });
    </script>

    {% include 'partials/footer.html.twig' %}
</body>
</html>