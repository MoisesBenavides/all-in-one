<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="AIO taller mecanico en montevideo, Estacionamiento 24 horas y mas">
    <meta name="keywords" content="Taller mecanico, taller mecanico montevideo, taller mecanico cerca de mi, estacionamiento 24 horas, venta de neumaticos">
    <meta name="author" content="All In One">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AIO - Taller, neumáticos, reservas y más</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('ico/logo-positivo.ico') }}">
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        @font-face {
            font-family: 'Teachers';
            src: url("{{ asset('font/Teachers-VariableFont_wght.ttf') }}");
            font-weight: normal;
            font-style: normal;
        }
    
        body, input, select, button, option {
            font-family: 'Teachers', sans-serif;
        }

        .btn{
            background-color: #dc2626;
            text: white;
        }

        .btn:hover{
            background-color: #b91c1c;
            text: white;
        }
    </style>
</head>

{% include 'partials/headerGerente.html.twig' %}

<body>
    <main class="min-h-screen bg-white p-4">
        <div class="max-w-7xl mx-auto space-y-6">
            <!-- Cuadro de Error -->
            <section class="w-full max-w-[700px] min-h-[520px] p-8 bg-white rounded-md border border-neutral-900 flex flex-col items-center">
                {% if response.errors is defined and response.errors is not empty %}
                    <div id="error-container" style="background-color: #ffcec6;" class="text-gray-950 text-center p-4 rounded-md mb-4">
                        <ul id="error-list">
                            {% for error in response.errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            <!-- Sección de Informes -->
            <section class="flex flex-col items-center justify-center p-8 rounded-2xl border border-neutral-900 bg-neutral-50 min-h-[300px] w-full">
                <h2 class="text-2xl md:text-4xl text-neutral-900 mb-8 text-center font-bold">Informes disponibles</h2>
                <a href="{{ path('showReports') }}" class="btn flex items-center justify-center w-full md:w-[600px] px-4 py-6 text-xl md:text-3xl font-bold rounded-xl text-white transition-colors duration-300">
                    Ingresar
                </a>
            </section>

            <!-- Sección de Stock -->
            <section class="flex flex-col items-center justify-center p-8 rounded-2xl border border-neutral-900 bg-neutral-50 min-h-[300px] w-full">
                <h2 class="text-2xl md:text-4xl text-neutral-900 mb-8 text-center font-bold">Gestión de Stock</h2>
                <a href="{{ path('stockManagement') }}" class="btn flex items-center justify-center w-full md:w-[600px] px-4 py-6 text-xl md:text-3xl font-bold rounded-xl text-white transition-colors duration-300">
                    Ingresar
                </a>
            </section>

            <!-- Sección de Inventario -->
            <section class="flex flex-col items-center justify-center p-8 rounded-2xl border border-neutral-900 bg-neutral-50 min-h-[300px] w-full">
                <h2 class="text-2xl md:text-4xl text-neutral-900 mb-8 text-center font-bold">Inventario</h2>
                <a href="{{ path('inventory') }}" class="btn flex items-center justify-center w-full md:w-[600px] px-4 py-6 text-xl md:text-3xl font-bold rounded-xl text-white transition-colors duration-300">
                    Ingresar
                </a>
            </section>

            <!-- Sección de Funcionarios -->
            <section class="flex flex-col items-center justify-center p-8 rounded-2xl border border-neutral-900 bg-neutral-50 min-h-[300px] w-full">
                <h2 class="text-2xl md:text-4xl text-neutral-900 mb-8 text-center font-bold">Lista de Funcionarios</h2>
                <a href="{{ path('employeeManagement') }}" class="btn flex items-center justify-center w-full md:w-[600px] px-4 py-6 text-xl md:text-3xl font-bold rounded-xl text-white transition-colors duration-300">
                    Ingresar
                </a>
            </section>
        </div>
    </main>

    {% include 'partials/footer.html.twig' %}

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const archivoTraduccionHeader = "{{ asset('translate/header.json') }}";
            // const archivoTraduccionHome = "{{ asset('translate/.json') }}";
            inicializarTraduccion(archivoTraduccionHeader, archivoTraduccionHome, 'es');
        });
    </script>
</body>
</html>